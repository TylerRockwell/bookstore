<div class="row store-top-bar">
  <div class="col-md-5 store-search-field">
    <%= form_tag '/', method: :get do %>
      <%= label_tag "search" %>
      <%= text_field_tag "search" %>


  </div>


  <div class="col-md-5 store-order-field">

      Order books by:
      <%= select_tag "sort_field", options_for_select(Book.sortable_fields), allow_blank: true %>
      <%= select_tag "sort_order", options_for_select([['Ascending', 'ASC'],['Descending', 'DESC']]) %>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
