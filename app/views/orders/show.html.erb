<h1> Your order from Beautiful Rails Bookstore </h1>

<h3>Items ordered:</h3>
<div class="row order-show-headers">
  <div class="col-md-3"> Title </div>
  <div class="col-md-2"> Unit Price </div>
  <div class="col-md-2"> Quantity </div>
  <div class="col-md-2"> Total Price </div>
</div>
<% @order_items.each do |item| %>
  <div class="row">
    <div class="col-md-3"> <%= item.book_title %></div>
    <div class="col-md-2"> <%= item.unit_price_in_dollars %></div>
    <div class="col-md-2"> <%= item.quantity %></div>
    <div class="col-md-2"> <%= item.total_price_in_dollars %></div>
  </div>
<% end %>

<div class="row order-total-row">
  <div class="col-md-2"> Total for this order: </div>
  <div class="col-md-2 order-total"><%= @order.total_in_dollars %></div>
</div>

<h3>Shipped to:</h3>
<%= @order.shipping_address_formatted_nicely %>
