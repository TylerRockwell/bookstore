<!DOCTYPE html>
<html>
  <head>
    <title>The Ugly Bookstore</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="col-md-10 col-md-offset-2 container">
      <div class="row">
        <div class="col-md-2"><%= link_to 'Home', root_path %></div>
        <div class="col-md-2"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></div>
      </div>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
