<!DOCTYPE html>
<html>
  <head>
    <title>The Beautiful Rails Bookstore</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="row header">
        <div class="col-md-2"><%= link_to 'Home', root_path %></div>
        <div class="col-md-4 cart-display">
          <%= current_user_cart.header_display if current_user %>
        </div>
        <div class="col-md-2 logout-link">
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        </div>
      </div>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
